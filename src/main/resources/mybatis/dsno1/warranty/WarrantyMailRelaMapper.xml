<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.warranty.WarrantyMailRelaMapper">
	
	<!--表名 -->
	<sql id="tableName">
		BX_WARRANTYMAILRELA
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f.MAIL_ID,	
		f.MAIL_TAG,	
		f.WARRANTY_ID,	
		f.STATUS,	
		f.LINK_DATE,	
		f.WARRANTYMAILRELA_ID,
		f.LINK_TAG,
		f.LINK_NODE_ID
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		MAIL_ID,	
		MAIL_TAG,	
		WARRANTY_ID,	
		STATUS,	
		LINK_DATE,	
		WARRANTYMAILRELA_ID,
		LINK_TAG,
		LINK_NODE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MAIL_ID},	
		#{MAIL_TAG},	
		#{WARRANTY_ID},	
		#{STATUS},	
		#{LINK_DATE},	
		#{WARRANTYMAILRELA_ID},
		#{LINK_TAG},
		#{LINK_NODE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field2"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			WARRANTYMAILRELA_ID = #{WARRANTYMAILRELA_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			WARRANTYMAILRELA_ID = WARRANTYMAILRELA_ID
		where 
			WARRANTYMAILRELA_ID = #{WARRANTYMAILRELA_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f.WARRANTYMAILRELA_ID = #{WARRANTYMAILRELA_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			WARRANTYMAILRELA_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
</mapper>