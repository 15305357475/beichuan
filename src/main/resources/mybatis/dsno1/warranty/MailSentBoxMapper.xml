<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="org.fh.mapper.dsno1.warranty.MailSentBoxMapper">

	<!--表名 -->
	<sql id="tableName">
		BX_MAILSENTBOX
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.FROM_,
		f.TO_,
		f.CC,
		f.BCC,
		f.SUBJECT,
		f.CONTENT,
		f.SENT_TIME,
		f.STATE,
		f.TAG,
		f.MAILSENTBOX_ID,
		f.FILEPATH,
		f.FILENAME,
		f.REPLYID
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		FROM_,
		TO_,
		CC,
		BCC,
		SUBJECT,
		CONTENT,
		SENT_TIME,
		STATE,
		TAG,
		MAILSENTBOX_ID,
		FILEPATH,
		FILENAME,
		REPLYID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FROM_},
		#{TO_},
		#{CC},
		#{BCC},
		#{SUBJECT},
		#{CONTENT},
		#{SENT_TIME},
		#{STATE},
		#{TAG},
		#{MAILSENTBOX_ID},
		#{FILEPATH},
		#{FILENAME},
		#{REPLYID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		MAILSENTBOX_ID = #{MAILSENTBOX_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		FROM_ = #{FROM_},
		TO_ = #{TO_},
		CC = #{CC},
		BCC = #{BCC},
		SUBJECT =
		#{SUBJECT},
		CONTENT = #{CONTENT},
		STATE = #{STATE},
		MAILSENTBOX_ID = MAILSENTBOX_ID,
		REPLYID = #{REPLYID}
		where
		MAILSENTBOX_ID = #{MAILSENTBOX_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.MAILSENTBOX_ID = #{MAILSENTBOX_ID}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			f.SUBJECT LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
			or
			f.CONTENT LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
			)
		</if>
		<if test="pd.MAIL != null and pd.MAIL != ''"><!-- 收件箱检索 -->
			and
			f.FROM_ = #{pd.MAIL}
		</if>
		and
		f.STATE = '1'
		order by f.SENT_TIME DESC
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		MAILSENTBOX_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>


</mapper>