<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.warranty.MailInBoxMapper">

	<!--表名 -->
	<sql id="tableName">
		BX_MAILINBOX
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.MAIL_FK,
		f.FROM_,
		f.TO_,
		f.SUBJECT,
		f.CONTENT,
		f.FILES,
		f.SENT_TIME,
		f.REFESH_TIME,
		f.READS_,
		f.STATE,
		f.TAG,
		f.MAILINBOX_ID,
		f.IMG,
		f.HTML,
		f.EML,
		f.ISDOWN,
		f.CC_,
		f.BCC_,
		f.TEXTFILE,
		f.INTERCEPT
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		MAIL_FK,
		FROM_,
		TO_,
		SUBJECT,
		CONTENT,
		FILES,
		SENT_TIME,
		REFESH_TIME,
		READS_,
		STATE,
		TAG,
		MAILINBOX_ID,
		IMG,
		HTML,
		EML,
		ISDOWN,
		CC_,
		BCC_,
		TEXTFILE,
		INTERCEPT
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MAIL_FK},
		#{FROM_},
		#{TO_},
		#{SUBJECT},
		#{CONTENT},
		#{FILES},
		#{SENT_TIME},
		#{REFESH_TIME},
		#{READS_},
		#{STATE},
		#{TAG},
		#{MAILINBOX_ID},
		#{IMG},
		#{HTML},
		#{EML},
		#{ISDOWN},
		#{CC_},
		#{BCC_},
		#{TEXTFILE},
		#{INTERCEPT}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		MAILINBOX_ID = #{MAILINBOX_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		READS_ = #{READS_},
		STATE = #{STATE},
		FILES = #{FILES},
		HTML =
		#{HTML},
		IMG = #{IMG},
		CONTENT = #{CONTENT},
		TEXTFILE = #{TEXTFILE},
		ISDOWN = #{ISDOWN},
		MAILINBOX_ID = MAILINBOX_ID
		where
		MAILINBOX_ID =
		#{MAILINBOX_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.MAILINBOX_ID = #{MAILINBOX_ID}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			f.SUBJECT LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
			or
			f.CONTENT LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
			)
		</if>
		<if test="pd.MAIL != null and pd.MAIL != ''"><!-- 收件箱检索 -->
			and
			(
			f.TO_ = #{pd.MAIL} or
			f.CC_ LIKE CONCAT(CONCAT('%',
			#{pd.MAIL}),'%')
			)
		</if>
		and
		f.STATE = '1'
		order by f.REFESH_TIME DESC
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		MAILINBOX_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>


</mapper>