<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.ins.InsMediaMapper">

	<!--表名 -->
	<sql id="tableName">
		INS_MEDIA
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.INS_ID,
		f.PROC_INST_ID_,
		f.TASK_ID_,
		f.NODE,
		f.CREATE_USER,
		f.CREATE_DATE,
		f.MEDIA_TYPE,
		f.MEDIA_NAME,
		f.MEDIA_PATH,
		f.STATUS,
		f.INSMEDIA_ID
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		INS_ID,
		PROC_INST_ID_,
		TASK_ID_,
		NODE,
		CREATE_USER,
		MEDIA_TYPE,
		MEDIA_NAME,
		MEDIA_PATH,
		STATUS,
		INSMEDIA_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{INS_ID},
		#{PROC_INST_ID_},
		#{TASK_ID_},
		#{NODE},
		#{CREATE_USER},
		#{MEDIA_TYPE},
		#{MEDIA_NAME},
		#{MEDIA_PATH},
		#{STATUS},
		#{INSMEDIA_ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		INSMEDIA_ID = #{INSMEDIA_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		PROC_INST_ID_ = #{PROC_INST_ID_}
		where
		INS_ID = #{INS_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.INSMEDIA_ID = #{INSMEDIA_ID}
	</select>

	<!-- 通过PROC_INST_ID_获取媒体数据 -->
	<select id="findByProc" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		and f.STATUS = '1'
		<if test="PROC_INST_ID_ != null and PROC_INST_ID_ != ''">
			and
			f.PROC_INST_ID_ = #{PROC_INST_ID_}
		</if>
		<if test="MEDIA_TYPE != null and MEDIA_TYPE != ''">
			and
			f.MEDIA_TYPE = #{MEDIA_TYPE}
		</if>
		order by f.CREATE_DATE
	</select>

	<!-- 通过INS_ID获取媒体数据 -->
	<select id="findByINS_ID" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		and f.STATUS = '1'
		<if test="INSSYS_ID != null and INSSYS_ID != ''">
			and
			f.INS_ID = #{INSSYS_ID}
		</if>
		<if test="MEDIA_TYPE != null and MEDIA_TYPE != ''">
			and
			f.MEDIA_TYPE = #{MEDIA_TYPE}
		</if>
		order by f.CREATE_DATE
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 字段1 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') or 字段2 
				LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') -->
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
	</select>

	<!-- 根据流程实例ID查询图片,用于导出到excel，仅两张图 -->
	<select id="getImgByProc" parameterType="pd" resultType="pd">
		SELECT
		*
		FROM
		(
		(
		SELECT
		im.INS_ID,
		im.INSMEDIA_ID,
		im.PROC_INST_ID_,
		im.MEDIA_PATH,
		im.NODE,
		im.MEDIA_TYPE,
		im.CREATE_DATE
		FROM
		ins_media im
		WHERE
		im.PROC_INST_ID_ = #{PROC_INST_ID_}
		AND im.NODE = '创建'
		AND im.MEDIA_TYPE
		= 'image/*'
		LIMIT 1
		) UNION ALL
		(
		SELECT
		im.INS_ID,
		im.INSMEDIA_ID,
		im.PROC_INST_ID_,
		im.MEDIA_PATH,
		im.NODE,
		im.MEDIA_TYPE,
		im.CREATE_DATE
		FROM
		ins_media im
		WHERE
		im.PROC_INST_ID_ = #{PROC_INST_ID_}
		AND im.NODE =
		'整改'
		AND im.MEDIA_TYPE = 'image/*'
		LIMIT 1
		)) temp
		ORDER BY
		temp.CREATE_DATE
	</select>


	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		INSMEDIA_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>


</mapper>