<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.w.DictDataMapper">
	
	<!--表名 -->
	<sql id="tableName">
		"DICTDATA"
	</sql>
	
	<!--数据字典表名 -->
	<sql id="dicTableName">
		"SYS_DICTIONARIES"
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		f."DICT_CODE",	
		f."PARENT_CODE",	
		f."PARENT_CODES",	
		f."DICT_LABEL",	
		f."DICT_VALUE",	
		f."DICT_TYPE",	
		f."DESCRIPTION",	
		f."STATUS",	
		f."CREATE_BY",	
		f."CREATE_DATE",	
		f."UPDATE_BY",	
		f."UPDATE_DATE",	
		f."REMARKS",	
		f."DICTDATA_ID"
	</sql>
	
	<!-- 字段用于新增 -->
	<sql id="Field2">
		"DICT_CODE",	
		"PARENT_CODE",	
		"PARENT_CODES",	
		"DICT_LABEL",	
		"DICT_VALUE",	
		"DICT_TYPE",	
		"DESCRIPTION",	
		"STATUS",	
		"CREATE_BY",	
		"CREATE_DATE",	
		"UPDATE_BY",	
		"UPDATE_DATE",	
		"REMARKS",	
		"DICTDATA_ID"
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{DICT_CODE},	
		#{PARENT_CODE},	
		#{PARENT_CODES},	
		#{DICT_LABEL},	
		#{DICT_VALUE},	
		#{DICT_TYPE},	
		#{DESCRIPTION},	
		#{STATUS},	
		#{CREATE_BY},	
		#{CREATE_DATE},	
		#{UPDATE_BY},	
		#{UPDATE_DATE},	
		#{REMARKS},	
		#{DICTDATA_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			"DICTDATA_ID" = #{DICTDATA_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
			set 
				"DICT_CODE" = #{DICT_CODE},	
				"PARENT_CODE" = #{PARENT_CODE},	
				"PARENT_CODES" = #{PARENT_CODES},	
				"DICT_LABEL" = #{DICT_LABEL},	
				"DICT_VALUE" = #{DICT_VALUE},	
				"DICT_TYPE" = #{DICT_TYPE},	
				"DESCRIPTION" = #{DESCRIPTION},	
				"STATUS" = #{STATUS},	
				"CREATE_BY" = #{CREATE_BY},	
				"CREATE_DATE" = #{CREATE_DATE},	
				"UPDATE_BY" = #{UPDATE_BY},	
				"UPDATE_DATE" = #{UPDATE_DATE},	
				"REMARKS" = #{REMARKS},	
				"DICTDATA_ID" = "DICTDATA_ID"
			where 
				"DICTDATA_ID" = #{DICTDATA_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 
			f."DICTDATA_ID" = #{DICTDATA_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include> f
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			"DICTDATA_ID" in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	
</mapper>