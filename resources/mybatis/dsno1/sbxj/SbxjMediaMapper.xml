<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fh.mapper.dsno1.sbxj.SbxjMediaMapper">

	<!--表名 -->
	<sql id="tableName">
		XJ_MEDIA
	</sql>

	<!--数据字典表名 -->
	<sql id="dicTableName">
		SYS_DICTIONARIES
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		f.XJ_ID,
		f.PROC_INST_ID_,
		f.TASK_ID_,
		f.NODE,
		f.CREATE_USER,
		f.CREATE_DATE,
		f.MEDIA_TYPE,
		f.MEDIA_NAME,
		f.MEDIA_PATH,
		f.STATUS,
		f.ID
	</sql>

	<!-- 字段用于新增 -->
	<sql id="Field2">
		XJ_ID,
		PROC_INST_ID_,
		TASK_ID_,
		NODE,
		CREATE_USER,
		MEDIA_TYPE,
		MEDIA_NAME,
		MEDIA_PATH,
		STATUS,
		ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{XJ_ID},
		#{PROC_INST_ID_},
		#{TASK_ID_},
		#{NODE},
		#{CREATE_USER},
		#{MEDIA_TYPE},
		#{MEDIA_NAME},
		#{MEDIA_PATH},
		#{STATUS},
		#{ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field2"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		ID = #{ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		ID = ID
		where
		ID = #{ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where
		f.ID = #{ID}
	</select>

	<!-- 通过XJ_ID获取媒体数据 -->
	<select id="findByProc" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		and f.STATUS = '1'
		<if test="XJ_ID != null and XJ_ID != ''">
			and
			f.XJ_ID = #{XJ_ID}
		</if>
		<if test="MEDIA_TYPE != null and MEDIA_TYPE != ''">
			and
			f.MEDIA_TYPE = #{MEDIA_TYPE}
		</if>
			AND f.MEDIA_PATH != 'NONE'
		order by f.CREATE_DATE
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
		where 1=1
		<if test="pd.KEYWORDS != null and pd.KEYWORDS != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 字段1 LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') or 字段2 
				LIKE CONCAT(CONCAT('%', #{pd.KEYWORDS}),'%') -->
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		f
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<!-- 根据ID查询图片,用于导出到excel，仅两张图 -->
	<!-- 导出-图片 -->
	<select id="getImgByProc" parameterType="pd" resultType="pd">
		SELECT
	* 
FROM
	(
		(
		SELECT
			XME.MEDIA_PATH,
			XME.CREATE_USER,
			XME.XJ_ID,
			XME.NODE,
			XME.CREATE_DATE 
		FROM
			xj_media XME
			LEFT JOIN xj_action XAC ON XME.XJ_ID = XAC.ID
			LEFT JOIN sys_dictionaries SD ON XAC.TYPE = SD.DICTIONARIES_ID 
		WHERE
			XME.XJ_ID = #{WT_ID}
			AND XME.MEDIA_TYPE = 'image/*' 
			AND XME.NODE = '创建' 
			LIMIT 1 
		) UNION ALL
		(
		SELECT
			XME.MEDIA_PATH,
			XME.CREATE_USER,
			XME.XJ_ID,
			XME.NODE,
			XME.CREATE_DATE 
		FROM
			xj_media XME
			LEFT JOIN xj_action XAC ON XME.XJ_ID = XAC.ID
			LEFT JOIN sys_dictionaries SD ON XAC.TYPE = SD.DICTIONARIES_ID 
		WHERE
			XME.XJ_ID = #{WT_ID}
			AND XME.MEDIA_TYPE = 'image/*' 
			AND XME.NODE = '封闭' 
			LIMIT 1 
		) 
	) temp 
ORDER BY
	temp.CREATE_DATE
	</select>

</mapper>